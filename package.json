{
  "name": "camunda-bpmn-comparer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "build:portable": "npm run tauri build && powershell -Command \"$v = (Get-Content src-tauri/tauri.conf.json | ConvertFrom-Json).version; mkdir -Force portable; copy src-tauri/target/release/camunda-bpmn-comparer.exe -Destination \\\"portable/camunda-bpmn-comparer-v$v-portable.exe\\\"\"",
    "build:portable:linux": "tauri build --bundles appimage",
    "build:portable:mac": "tauri build --bundles dmg"
  },
  "dependencies": {
    "@google/genai": "^1.10.0",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-http": "^2.5.5",
    "@types/react-virtualized-auto-sizer": "^1.0.4",
    "@types/react-window": "^1.8.8",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^16.5.3",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^2.2.5"
  },
  "devDependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
